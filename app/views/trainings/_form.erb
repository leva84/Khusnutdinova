<%= form_with model: @training, local: true do |form| %>

  <% if @training.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@training.errors.count, "error") %> prohibited
        this training from being saved:
      </h2>
      <ul>
        <% @training.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :cover %>
    <%= image_tag(@training.cover.thumb.url) if @training.cover? %>
    <%= form.file_field :cover %>
  </p>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>