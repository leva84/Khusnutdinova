<div class="container" style="background-image: url(<%= @training.cover.url %>)">
  <div class="row featurette shadow-lg p-5 text-white rounded h-100" style="background: rgba(242, 230, 245, 0.5); ">
    <div class="col-md-7">
      <h2 class="featurette-heading text-primary font-italic text-center"><%= @training.title %></h2>
      <p class="lead text-center"><%= @training.text %></p>
    </div>
    <div class="col-md-5 text-body p-5">
      <p>
        <strong>Address:</strong>
        <%= @training.address %>
      </p>

      <p>
        <strong>Start:</strong>
        <%= @training.start_time %>
      </p>

      <p>
        <strong>Finish:</strong>
        <%= @training.finish_time %>
      </p>

      <p>
        <strong>Cost:</strong>
        <%= @training.cost %>
      </p>
    </div>
  </div>
</div>



<% @training.descriptions.each_with_index do |description, index| %>
  <% if (index + 1).even? %>
    <hr class="featurette-divider">
    <div class="container">
      <div class="row featurette shadow-lg p-5 rounded">
        <div class="col-md-7">
          <h2 class="featurette-heading text-muted font-italic text-center"><%= description.title %></h2>
          <p class="lead"><%= description.text %></p>
        </div>
        <div class="col-md-5">
          <%= image_tag(description.picture.url, class: 'img-fluid') if description.picture? %>
        </div>
      </div>
    </div>
  <% else %>
    <hr class="featurette-divider">
    <div class="container">
      <div class="row featurette shadow-lg p-5 rounded">
        <div class="col-md-5">
          <%= image_tag(description.picture.url, class: 'img-fluid') if description.picture? %>
        </div>
        <div class="col-md-7">
          <h2 class="featurette-heading text-muted font-italic text-center"><%= description.title %></h2>
          <p class="lead"><%= description.text %></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<% if admin %>
  <hr class="featurette-divider">
  <div class="container">
    <h2>Добавить описание:</h2>
    <%= render 'descriptions/form' %>
    <%= link_to 'Изменить тренинг', edit_training_path, class: "btn btn-warning" %>
  </div>
<% end %>

<hr class="featurette-divider">
<div class="container">
  <h2>Коментарии:</h2>
  <%= render @training.comments %>

  <h2>Оставить коментарий:</h2>
  <%= render 'comments/form' %>
</div>

<div class="container">
  <%= link_to 'Back', trainings_path, class: 'btn btn-secondary' %>
</div>
