<div class="container">
  <%= link_to 'На главную', root_path, class: 'btn btn-secondary' %>
  <%= link_to 'Назад', :back, class: 'btn btn-secondary' %>
  <% if admin %>
    <%= link_to 'Новый Расклад', new_alignment_path, class: 'btn btn-success' %>
  <% end %>
</div>
<% @alignments.each do |alignment| %>

  <div class="container mt-5">
    <div class="card">
      <h5 class="card-header">Расклад: <%= alignment.title %></h5>
      <div class="card-body">
        <h5 class="card-title">Колода: <%= alignment.deck_name %></h5>
        <%= link_to 'Посмотреть правила', alignment, class: "btn btn-primary" %>
        <% if admin %>
          <%= link_to 'Обновить', edit_alignment_path(alignment), class: "btn btn-warning" %>
          <%= link_to 'Удалить', alignment, class: "btn btn-danger",
                          method: :delete, data: {confirm: 'Are you sure?'} %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<hr>
