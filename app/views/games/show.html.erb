<div class="container pt-5 mt-5">
  <p class="h3" id="notice"><%= notice %></p>
  <div class="row">
    <% @game.playing_cards.each do |card| %>
      <div class="col">
        <p class="text-center h3"><%= card.name %></p>
        <p><%= image_tag(card.photo, class: 'w-100 img-thumbnail shadow') %></p>
        <p><%= card.answer %></p>
        <% if !card.answer.present? %>
          <p><%= render 'playing_cards/form', playing_card: card %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="pb-5 mb-5 mt-5"><%= link_to 'Back', @game.alignment %></div>
</div>
