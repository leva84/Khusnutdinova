<div class="container p-5">
  <% @user_games.each do |game| %>
    <div class="border rounded shadow p-1 m-1 w-100 row">
      <p class="col p-2"><%= link_to game.title, game.alignment %></p>
      <p class="col p-2">Колода: <%= game.deck_name %></p>
      <p class="col p-2">Дата и время: <%= game.created_at %></p>
      <p class="col p-2"><%= link_to 'Ваш Результат', game, class: 'btn btn-primary' %></p>
      <p class="col p-2"><%= link_to 'Удалить расклад', game_path(game), class: "btn btn-danger",
                                     method: :delete, data: {confirm: 'Are you sure?'} %></p>
    </div>
  <% end %>
</div>
