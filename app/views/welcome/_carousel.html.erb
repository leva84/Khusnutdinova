<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

  <ol class="carousel-indicators">
    <% @trainings.each_with_index do |index| %>
      <% if index == 0 %>
        <%= tag.li data: {target: "#carouselExampleCaptions", slide_to: "#{index}"}, class: ['active'] %>
      <% else %>
        <%= tag.li data: {target: "#carouselExampleCaptions", slide_to: "#{index}"} %>
      <% end %>
    <% end %>
  </ol>

  <div class="carousel-inner">
    <% @trainings.each_with_index do |training, index| %>
      <% if index == 0 %>
        <div class="carousel-item active">
          <%= link_to(image_tag(training.cover.to_s, class: "d-block w-100 img-fluid card-img-top"),
                      training_path(training.id)) %>
          <div class="carousel-caption d-md-block">
            <h4><%= training.title %></h4>
            <p><%= training.address %></p>
            <p><%= training.start_time %></p>
          </div>
        </div>
      <% else %>
        <div class="carousel-item">
          <%= link_to(image_tag(training.cover.to_s, class: "d-block w-100 img-fluid card-img-top"),
                      training_path(training.id)) %>
          <div class="carousel-caption d-md-block">
            <h4><%= training.title %></h4>
            <p><%= training.address %></p>
            <p><%= training.start_time %></p>
          </div>
        </div>
      <% end %>
    <% end %>

    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
