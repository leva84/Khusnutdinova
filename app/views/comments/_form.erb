<%= form_with(model: [@training, @training.comments.build ], local: true) do |form| %>
  <div class="form-group">
    <%= form.label 'Ваше имя:' %><br>
    <%= form.text_field :commenter, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label 'Текст' %><br>
    <%= form.text_area :body, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.submit 'Прокоментировать', class: 'btn btn-primary mb-2' %>
  </div>
<% end %>