<%= form_with(model: [@training, @training.descriptions.build ], local: true) do |form| %>

  <div class="actions">
    <%= form.label :picture %>
    <%# image_tag(@description.picture.thumb.url) if @description.picture? %>
    <%= form.file_field :picture %>
  </div>

  <div class="actions">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="actions">
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
